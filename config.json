{
  "version": "1.0",
  "formatOnSave": true,
  "defaultFormatter": "prettier",
  "rules": {
    "enabled": true,
    "checks": [
      {
        "name": "commit-convention",
        "path": "./rules/commit-convention.mdc",
        "required": true,
        "description": "Enforced commit message rules",
        "severity": "error"
      }
    ],
    "settings": {
      "enforceRules": true,
      "allowSkip": false,
      "notifyOnViolation": true,
      "blockOnViolation": true,
      "thresholds": {
        "bundleSize": {
          "js": "200kb",
          "css": "100kb"
        },
        "performance": {
          "fcp": 2000,
          "lcp": 2500,
          "fid": 100,
          "cls": 0.1
        },
        "coverage": {
          "statements": 80,
          "branches": 80,
          "functions": 80,
          "lines": 80
        }
      }
    }
  },
  "conventions": {
    "enabled": true,
    "prePrompts": [
      {
        "name": "foundation",
        "path": "./prompts/conventions/foundation.mdc",
        "required": true,
        "priority": 1,
        "description": "Base project structure and import patterns"
      },
      {
        "name": "cloudflare-workers",
        "path": "./prompts/conventions/cloudflare-workers.mdc",
        "required": true,
        "priority": 2,
        "description": "Cloudflare Workers patterns and import structure"
      },
      {
        "name": "testing",
        "path": "./prompts/conventions/testing.mdc",
        "required": true,
        "priority": 3,
        "description": "Testing patterns"
      },
      {
        "name": "state-management",
        "path": "./prompts/conventions/state-management.mdc",
        "required": true,
        "priority": 4,
        "description": "State management patterns"
      },
      {
        "name": "performance",
        "path": "./prompts/conventions/performance.mdc",
        "required": true,
        "priority": 5,
        "description": "Performance optimization patterns"
      }
    ],
    "settings": {
      "enforceOrder": true,
      "validateDependencies": true,
      "validatePatterns": true,
      "patterns": {
        "common": "packages/common/src/**/*.{ts,tsx}",
        "vm": "apps/vm-management-worker/src/**/*.ts",
        "forward": "apps/forwarding-worker/src/**/*.ts",
        "tests": "**/*.{test,spec}.{ts,tsx}"
      }
    }
  }
}
