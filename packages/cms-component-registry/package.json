{
  "name": "@niteco/cms-component-registry",
  "version": "1.0.0",
  "description": "A flexible CMS component registry for React applications supporting multiple CMS systems",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build",
    "publish:npm": "node scripts/publish.js",
    "docs": "typedoc --out docs src --name \"@niteco/cms-component-registry\" --readme README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niteco/cms-component-registry.git"
  },
  "keywords": [
    "react",
    "cms",
    "component",
    "registry",
    "optimizely",
    "contentful",
    "strapi",
    "headless"
  ],
  "author": "Niteco",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3",
    "typedoc": "^0.24.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
